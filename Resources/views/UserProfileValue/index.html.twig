{% extends 'CrisisTextLineUserProfileBundle::base.html.twig' %}

{% block userprofiles %}
    <h1>UserProfileValue list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Last Edited</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('user_profiles_value_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.value }}</td>
                <td>{% if entity.timeLastEdited %}{{ entity.timeLastEdited|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('user_profiles_value_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('user_profiles_value_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('user_profiles_value_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
